{
  "compilerOptions": {
    "rootDirs": ["src", "stories"],
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es2015",
    "jsx": "react",
    "types": ["react", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
